<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="8dp"
    app:cardElevation="5.0dip">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/my_card_design"
        android:orientation="horizontal"
        android:padding="15.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/currency_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16.0dip"
                android:layout_marginLeft="16.0dip"
                android:text="USD"
                android:textColor="#ff000000"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/currency_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currency_symbol"
                android:layout_marginStart="16.0dip"
                android:layout_marginLeft="16.0dip"
                android:text="Dollars"
                android:textColor="#ff000000"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/currency_converted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="3.0dip"
                android:layout_marginRight="3.0dip"
                android:text="$1000"
                android:textColor="#ff000000"
                android:textSize="15.0sp" />

            <TextView
                android:id="@+id/currency_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/currency_converted"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="3.0dip"
                android:layout_marginRight="3.0dip"
                android:text="$1 = 1.343 EUR"
                android:textColor="#ff000000"
                android:textSize="12.0sp" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>